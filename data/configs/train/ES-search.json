
{
    "env_config_base": {
        "obs_elements": ["services_nodes"],
        "penalty_illegal": -1,
        "penalty_move": 0,
        "penalty_variance": 0,
        "penalty_consolidated": 1,
        "penalty_latency": 1,
        "episode_length": 50,
        "latency_lower": 0.75,
        "latency_upper": 2,
        "consolidation_lower": 0,
        "consolidation_upper": 1,
        "no_action_on_overloaded": false,
        "seed": 1,
        "kube":{
            "admin_config": "~/.kube/config",
            "service_image": "sdghafouri/service",
            "namespace": "consolidation",
            "clean_after_exit": true,
            "utilization_image": "sdghafouri/utilization-server"
        }
    },
    "run_or_experiment": "ES",
    "learn_config": {
        "num_gpus": 0.25,
        "num_workers": 4,
        "lr": 0.0001,
        "model": {
            "fcnet_hiddens": [40, 40, 40, 40]
        },
        "framework": "torch",
        "rollout_fragment_length": 200,
        "train_batch_size": 400
    },
    
    "stop": {
        "training_iteration": 200
    }
}