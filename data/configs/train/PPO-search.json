{
    "env_config_base": {
        "obs_elements": ["services_nodes"],
        "penalty_illegal": -1,
        "penalty_move": 0,
        "penalty_variance": 0,
        "penalty_consolidated": 0,
        "penalty_latency": 1,
        "workload_stop": 1,
        "episode_length": 50,
        "timestep_reset": false,
        "placement_reset": false,
        "normalise_latency": true,
        "no_action_on_overloaded": false,
        "seed": 1,
        "kube":{
            "admin_config": "~/.kube/config",
            "service_image": "sdghafouri/service",
            "namespace": "consolidation",
            "clean_after_exit": true,
            "utilization_image": "sdghafouri/utilization-server"
        }
    },
    "run_or_experiment": "PPO",
    "learn_config": {
        "sgd_minibatch_size": 128,
        "train_batch_size": 1000,
        "num_gpus": 0.15,
        "model": {
            "fcnet_hiddens": [
                {"grid_search": [128, 64]},
                {"grid_search": [128, 64]},
                {"grid_search": [128, 64]}
            ],
            "fcnet_activation": "linear",
            "vf_share_layers": true
        },
        "gamma": 0.99,
        "lr": 0.0003,
        "num_workers": 2,
        "observation_filter": "MeanStdFilter",
        "num_sgd_iter": 1,
        "vf_loss_coeff": 0.01,
        "seed": 203
    },
    "stop": {
        "timesteps_total": 5000000
    }
}